<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        card_view:targetApi="lollipop">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:padding="13dp"
                android:id="@+id/backbtn"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:visibility="visible"
                style="@style/TextAppearance.AppCompat.Title"
                android:padding="13dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_bold"
                />

            <ImageView
                android:id="@+id/refresh_bookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0"
                android:padding="13dp"
                android:visibility="gone"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_refresh_black_24dp"
                android:layout_marginEnd="13dp"

                android:contentDescription="TODO" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="23dp"
        android:paddingRight="23dp"
        android:paddingLeft="23dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border"
                android:padding="23dp"
                android:layout_marginTop="37dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_account_circle_black_24dp"
                        android:layout_marginTop="7dp"

                        android:contentDescription="TODO" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/acc_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="niteric@gmail.com"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/lato_bold"
                            />
                        <TextView
                            android:id="@+id/acc_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/notificationbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_notifications_active_black_24dp"
                        android:layout_gravity="end"
                        android:paddingLeft="13dp"
                        android:contentDescription="TODO" />

                </LinearLayout>


                <TextView
                    android:id="@+id/acc_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="John Doe"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />


                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:elevation="0dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="7sp"
                    card_view:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/addnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Add Phone Number"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/border"
                        android:textAlignment="center"
                        android:fontFamily="@font/lato_bold"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <!--<view-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0.5dp"-->
                <!--/>-->

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7sp"
                android:visibility="gone"
                app:cardCornerRadius="9dp"
                card_view:targetApi="lollipop">
                <TextView
                    android:id="@+id/edit_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Edit info"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                card_view:elevation="0dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7sp"
                android:visibility="gone"
                app:cardCornerRadius="9dp">

                <TextView
                    android:id="@+id/payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Payment Method"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="?attr/actionBarSize"
                >

                <androidx.cardview.widget.CardView
                    card_view:elevation="0dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7sp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:fontFamily="@font/lato_bold"
                        android:padding="8dp"
                        android:text="Sign Out"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>




                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7sp"
                    card_view:elevation="0dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/help"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Help"
                        android:background="@color/colorPrimary"
                        android:textAlignment="center"
                        android:fontFamily="@font/lato_bold"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7sp"
                    card_view:elevation="0dp"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/acsettings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:text="Settings"
                        android:background="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>