<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark"

    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="23dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_home_category"
        android:paddingBottom="13dp"
        android:layout_marginTop="17dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/categoryrecyclerview"
        android:visibility="gone"
        />
    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="32dp"
        android:id="@+id/companyrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_demo_child_count="10"
        app:shimmer_demo_grid_child_count="2"
        app:shimmer_demo_layout="@layout/load_institution"
        app:shimmer_demo_layout_manager_type="grid"
        app:shimmer_demo_angle="20"
        tools:listitem="@layout/list_home_institutions"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/categoryrecyclerview"
        android:layout_marginBottom="?attr/actionBarSize"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/layout_loading"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:layout_above="@+id/spin_kit"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            />
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Small.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorAccent"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/categoryrecyclerview"
        android:layout_marginBottom="?attr/actionBarSize"
        android:id="@+id/layout_error_disp"
        android:visibility="gone"
        android:layout_margin="16dp"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_conectionerror2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection Error!"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:textAlignment="center"
            android:fontFamily="@font/lato"
            android:textStyle="bold"
            android:id="@+id/error_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Couldn't communicate with the server"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_bold"
            android:id="@+id/error_description"
            android:textAlignment="center"
            android:layout_marginTop="13dp"
            android:textColor="@color/colorAccent"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="?attr/actionBarSize"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Retry"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:id="@+id/retry_btn"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>