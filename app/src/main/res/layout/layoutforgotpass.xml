<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="39dp"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="322dp"
                android:layout_height="125dp"
                android:layout_above="@+id/layout_email"
                android:layout_marginBottom="30dp"
                android:src="@mipmap/ic_appname"
                android:layout_gravity="center"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                style="@style/TextAppearance.AppCompat.SearchResult.Title"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:fontFamily="@font/lato"
                android:visibility="gone"
                />

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="13dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/lato"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    tools:targetApi="lollipop"
                    android:id="@+id/forgotpass_email"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/requestcode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Request Reset Code"
                    android:layout_below="@+id/layout_password"
                    android:background="@drawable/border_primary"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/havecode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have the code? Click Here"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/lato"
                android:layout_marginTop="23dp"
                android:padding="7dp"
                android:textSize="18sp"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>