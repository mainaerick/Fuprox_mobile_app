<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_app.BranchesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay"
                android:padding="12dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/laytitle"
                    >
                    <ImageView
                        android:id="@+id/branches_back"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/success_circle"
                        android:elevation="9dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />
                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="27dp"
                        android:text="Equity Bank"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_toRightOf="@+id/branches_back"
                        android:layout_toLeftOf="@+id/searchbtn"
                        android:textSize="19dp"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        />

                    <ImageView
                        android:id="@+id/searchbtn"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_baseline_search_24"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgcompany"
                    android:layout_width="fill_parent"
                    android:layout_height="370dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/gradient_background"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:layout_below="@+id/laytitle"
                    android:id="@+id/company_name_title"
                    android:textColor="@color/colorAccent"
                    android:textSize="17dp"
                    android:layout_marginTop="37dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sort By"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@+id/laytitle"
                    android:layout_marginTop="32dp"

                    />
                <RadioGroup
                    android:checkedButton="@+id/radionearme"
                    android:id="@+id/togglerate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/control_switch_background_border"
                    android:orientation="horizontal"
                    android:layout_below="@+id/sort"
                    >
                    <RadioButton
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:id="@+id/radionearme"
                        android:background="@drawable/control_switch_background_selector_middle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="Near Me"
                        android:layout_margin="3dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@drawable/control_switch_color_selector"/>
                    <RadioButton
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:id="@+id/radioqueusize"
                        android:background="@drawable/control_switch_background_selector_middle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:text="Name"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@drawable/control_switch_color_selector"/>
                </RadioGroup>
            </RelativeLayout>

            <ListView
                android:id="@+id/branches_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@null"
                android:paddingTop="10dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                tools:listitem="@layout/list_new_branches"
                android:scrollbars="none"
                android:layout_below="@+id/lay"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/layout_loading"
                android:layout_marginTop="320dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="@color/colorPrimary"
                    android:layout_above="@+id/spin_kit"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:visibility="gone"
                    />
                <com.github.ybq.android.spinkit.SpinKitView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:SpinKit_Color="@color/colorAccent"
                    android:layout_gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/layout_error_disp"
                android:visibility="gone"
                android:layout_marginTop="320dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_conectionerror2"
                    android:id="@+id/error_img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Error!"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textAlignment="center"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    android:id="@+id/error_title"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Couldn't communicate with the server"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:id="@+id/error_description"
                    android:textAlignment="center"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/colorAccent"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="?attr/actionBarSize"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Retry"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingLeft="23dp"
                        android:paddingRight="23dp"
                        android:id="@+id/retry_btn"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>