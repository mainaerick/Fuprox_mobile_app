<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
<!--        <item name="android:textColor">@color/colorPrimary</item>-->
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--<style name="AppTheme" parent="Theme.AppCompat.DayNight">-->


    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/ligt_grey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorPrimaryDark</item>
        <item name="android:bottomDark">@color/colorPrimaryDark</item>
        <item name="android:bottomMedium">@color/colorPrimaryDark</item>
        <item name="android:centerBright">@color/colorPrimaryDark</item>
        <item name="android:centerDark">@color/colorPrimaryDark</item>
        <item name="android:centerMedium">@color/colorPrimaryDark</item>
        <item name="android:fullBright">@color/colorPrimaryDark</item>
        <item name="android:fullDark">@color/colorPrimaryDark</item>
        <item name="android:topBright">@color/colorPrimaryDark</item>
        <item name="android:topDark">@color/colorPrimaryDark</item>
    </style>

<!--    splash screen-->
    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
</style>

</resources>
